@tailwind base;
@tailwind components;
@tailwind utilities;

.preview{
    width: 600px;
    height: 350px;
}

.break-space{
    white-space: break-spaces;
    word-break: break-all;
}

.animation-radio-buttons :checked + div{
    @apply bg-blue-100 rounded;
}

@media (prefers-reduced-motion: no-preference){
    :root {
        scroll-behavior: smooth;
    }
}
